<h1>Display: <%= @thread.thread_display_name %></h1>
<hr>

<div class="row">
	<div class="span4">
		<h3>Name:</h3> <p><%= @thread.thread_display_name %></p>
		<h3>Description:</h3><p> <%= @thread.description %></p>
		<h3>Category:</h3> <p><%= @thread.category %></p>
		<h3>Status:</h3> <p><%= @thread.status %></p>
		
		<p><h4>From:</h4> <%= @thread.start_date.inspect %></p>
		<p><h4>To:</h4> <%= @thread.end_date.inspect %></p>
		
		
	</div>
	<div class="span5">
		<h3>Topics coded</h3>
			<% @thread.codes.each do |code| %>
        <div style="background-color:<%= code.color %>; margin-left: 7px; float: left;color:black" class="alert alert-info">
            <p id="<%= code.code_text %>"><h4><%= code.code_text %></h4>
                <br>
                <%= code.code_description %>
            </p>
        </div>
       <% end %>
	</div>
</div> 
<hr>
<div class="row"></div>
	<!--<h3>Percentage of surface</h3> That will be when we have the bar chart-->
	<h3>Surface in Newspapers front pages</h3>
	<p>Export to svg, csv, ods, png, pdf</p>
<hr>

<div class="row">
	<div class="span3">
		<h2>Newspapers:</h2>
	</div>
	
	<div class="span2">
		<% @thread.media.each do |m| %>
				<h3><%= m.name.capitalize %></h3>
		<% end %>
	</div>
</div>
<hr>
<div class="row">
	<% @image_counter.times do |ic| %>
		<div class="span1">
			<%= image_tag "/assets#{@images[ic].local_path}", id: "image#{ic}", style: "height:120px"%>
		</div>
	<% end %>
</div>















<script type="text/javascript">
$(function (argument) {
    $(".breadcrumb li").filter("li.active").attr("class"," ");
    $("#display").attr("class", "active");

})
</script>
