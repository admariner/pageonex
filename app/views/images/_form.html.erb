<%= form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :publication_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :publication_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :size, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :media_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :media_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :missing, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :missing, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn' %>
  </div>
<% end %>
